<% if @article.errors.any? %>
<h2>We got these errors while creating your article</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
	 <li><%= msg %></li>
	<% end %>
<% end %>

<div class='row'>
	<div class='col-xs-12'>
		<%= form_for(@article, :html => {class: "form-horizontal", role: "form"}) do |i| %>
		 	<div class="form-group">
		 		<div class="control-label col-sm-2">
		    		<%= i.label:title %>
		    	</div>
		    	<div class="col-sm-8">
					<%= i.text_field :title, class: "form-control", placeholder: "title of article", autofocus: true%>
				</div>
			</div>
			<div class="form-group">
		 		<div class="control-label col-sm-2">
		    		<%= i.label:description %>
		    	</div>
		    	<div class="col-sm-8">
		    		<%= i.text_area :description, rows: 10, class: "form-control", placeholder: "body of article"%>
		    	</div>
		    </div>
		    <div class="form-group">
		    	<div class="col-sm-offset-2 col-sm-10">
		 			<%= i.submit class: 'btn btn-primary btn-lg'%>
		 		</div>
		 	</div>
		<% end %>
		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel and return to articles list", articles_path %> ]
		</div>
	</div>
</div>