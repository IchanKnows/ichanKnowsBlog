<h1>Create an article</h1>

<% if @article.errors.any? %>
<h2>We got these errors while creating your article</h2>
<ul>
	<% @article.errors.full_messages.each do |msg| %>
	 <li><%= msg %></li>
	<% end %>
<% end %>
<%= form_for @article do |i| %>
 
 <p>
    <%= i.label:title %><br/>
    <%= i.text_field :title%>
 </p>

 <p>
    <%= i.label:description %><br/>
    <%= i.text_area :description%>
 </p>

 <p>
 	<%= i.submit %>
 </p>

<% end %>